# vim: filetype=zsh sw=2 ts=2 sts=2 et tw=80 foldlevel=0 nospell

if [[ ! -z "$TMUX" ]]; then
  local _pat
  for var in ${__TMUX_VARS__};
  do
    if [[ -z "${_pat}" ]]; then
      _pat="^${var}"
    else
      _pat="${_pat}\|^${var}"
    fi
  done
  local _vars
  _vars="$(tmux show-environment | grep "${_pat}")"
  for var in ${_vars};
  do
    io::vlog 1 "export $var"
    export $var
  done
fi

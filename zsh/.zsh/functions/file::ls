# vim: filetype=zsh sw=2 ts=2 sts=2 et tw=80 foldlevel=0 nospell

# List files in long format.

eval "${=aliases[ls]:-ls} -Fh $1 $*"
awk '/^-/ {
  sum += $5
  ++filenum
}
END {
  if (filenum > 0) {
    split("B KB MB GB TB PB", type)
    y = 0
    for(i = 5; y < 1 && i > 0; i--) {
      y = sum / (2^(10*i))
    }
    printf("Total size (files only): %.1f %s, %d files.\n", y, type[i+2], filenum)
  }
}' <<< $(${CMDPREFIX}ls -lFh $1 $*)

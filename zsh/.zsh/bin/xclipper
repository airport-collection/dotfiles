#!/usr/bin/env zsh

# The following is not need as it is already setup by .zshenv
fpath+=(~/.zsh/lib)
autoload -Uz os::LINUX os::OSX osx::xclip ssh::xclip

setopt localoptions err_return

if [[ -z "$SSH_CLIENT" ]]; then
  if os::LINUX; then
    if (( $+commands[xclip] )); then
      xclip "$@"
    elif (( $+commands[xsel] )); then
      xsel --clipboard --input
    fi
  elif os::OSX; then
    osx::xclip "$@"
  fi
else
  ssh::xclip --os "${SSH_OS}"  "$@"
fi

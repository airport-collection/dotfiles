bin="vim"
os::OSX && bin="mvim"
print '\nUpdating vim plugins...'
if [[ -f ~/.vimrc ]]; then
  ${bin} -c 'set nomore' -c 'NeoBundleUpdate' -c 'q'
else
  ${bin} -c 'call dein#update()' -c 'q'
fi


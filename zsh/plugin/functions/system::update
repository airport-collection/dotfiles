# vim: filetype=zsh sw=2 ts=2 sts=2 et tw=80 foldlevel=0 nospell

print 'Updating brew...'
brew update && brew upgrade

print '\nUpdating zplug...'
zplug update

print '\nUpdating zplug itself'
zplug::update-self

print '\nUpdating pip...'
pip freeze >! /tmp/pip.log && pip install --upgrade -r /tmp/pip.log

print '\nUpdating pip3...'
pip3 freeze >! /tmp/pip3.log && pip3 install --upgrade -r /tmp/pip3.log

print '\nUpdating gem...'
gem update

print '\nUpdating vim...'
vi -c 'NeoBundleUpdate' -c 'q'

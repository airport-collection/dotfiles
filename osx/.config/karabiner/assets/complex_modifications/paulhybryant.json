{
    "title": "Personal rules.",
    "rules": [
        {
            "description": "ctrl - mouse button1 (left) → cmd - mouse button 1 (left) in google chrome",
            "manipulators": [{
                "from": {
                    "pointing_button": "button1",
                    "modifiers": {
                      "mandatory": [
                        "control"
                      ]
                    }
                },
                "to": [{
                    "pointing_button": "button1",
                    "modifiers": "command"
                }],
                "conditions": [
                  {
                    "type": "frontmost_application_if",
                    "bundle_identifiers": [
                      "^com\\.google\\.Chrome$"
                    ]
                  }
                ],
                "type": "basic"
            }]
        },
        {
            "description": "Mouse button2 (right) → Mission Control",
            "manipulators": [{
                "from": {
                    "pointing_button": "button2",
                    "modifiers": {
                      "mandatory": [
                        "control"
                      ]
                    }
                },
                "to": [{
                    "key_code": "up_arrow",
                    "modifiers": "control"
                }],
                "type": "basic"
            }]
        },
        {
            "description": "Mouse button3 (middle) → Mission Control",
            "manipulators": [{
                "from": {
                    "pointing_button": "button3",
                    "modifiers": {
                      "mandatory": [
                        "control"
                      ]
                    }
                },
                "to": [{
                    "key_code": "up_arrow",
                    "modifiers": "control"
                }],
                "type": "basic"
            }]
        },
        {
            "description": "right_alt restarts synergy",
            "manipulators": [{
                "from": {
                    "key_code": "right_alt"
                },
                "to": [{
                    "shell_command": "/usr/local/bin/noti /Users/yuhuang/.local/bin/synergy"
                }],
                "type": "basic"
            }]
        }
    ]
}

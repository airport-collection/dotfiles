# Tab navigation in Chrome and iTerm2
# lctrl - 1   [Google Chrome,iTerm2]  : khd -p "cmd - 1"
# lctrl - 2   [Google Chrome,iTerm2]  : khd -p "cmd - 2"
# lctrl - 3   [Google Chrome,iTerm2]  : khd -p "cmd - 3"
# lctrl - 4   [Google Chrome,iTerm2]  : khd -p "cmd - 4"
# lctrl - 5   [Google Chrome,iTerm2]  : khd -p "cmd - 5"
# lctrl - 6   [Google Chrome,iTerm2]  : khd -p "cmd - 6"
# lctrl - 7   [Google Chrome,iTerm2]  : khd -p "cmd - 7"
# lctrl - 8   [Google Chrome,iTerm2]  : khd -p "cmd - 8"
# lctrl - 9   [Google Chrome,iTerm2]  : khd -p "cmd - 9"
# lctrl - space [iTerm2]  : khd -p "cmd - space"

cmd - a [iTerm2]  : khd -p "ctrl - a"
cmd - c [iTerm2]  : khd -p "ctrl - c"
cmd - d [iTerm2]  : khd -p "ctrl - d"
cmd - h [iTerm2]  : khd -p "ctrl - h"
cmd - l [iTerm2]  : khd -p "ctrl - l"
cmd - n [iTerm2]  : khd -p "ctrl - n"
cmd - q [iTerm2]  : khd -p "ctrl - q"
cmd - r [iTerm2]  : khd -p "ctrl - r"
cmd - s [iTerm2]  : khd -p "ctrl - s"
cmd - u [iTerm2]  : khd -p "ctrl - u"
cmd - w [iTerm2]  : khd -p "ctrl - w"
cmd - z [iTerm2]  : khd -p "ctrl - z"
cmd - tab [Google Chrome]  : khd -p "ctrl - tab"
cmd + shift - tab [Google Chrome]  : khd -p "ctrl + shift - tab"

# Browser shortcuts
# lctrl - b   [Google Chrome,Safari]  : khd -p "cmd - b"
# lctrl - f   [Google Chrome,Safari]  : khd -p "cmd - f"
# lctrl - i   [Google Chrome,Safari]  : khd -p "cmd - i"
# lctrl - l   [Google Chrome,Safari]  : khd -p "cmd - l"
# lctrl - t   [Google Chrome,Safari]  : khd -p "cmd - t"
# lshift + lctrl - t  [Google Chrome,Safari]  : khd -p "shift + cmd - t"

# Global
# lctrl - a   ! [*]   : khd -p "cmd - a"
# lctrl - c   ! [*]   : khd -p "cmd - c"
# lctrl - s   ! [*]   : khd -p "cmd - s"
# lctrl - v   ! [*]   : khd -p "cmd - v"
# lctrl - w   ! [*]   : khd -p "cmd - w"
# lctrl - x   ! [*]   : khd -p "cmd - x"
lcmd + lctrl - l    : pmset displaysleepnow
# lcmd + lctrl - l  : open /System/Library/Frameworks/ScreenSaver.framework/Versions/A/Resources/ScreenSaverEngine.app

# Open iTerm2
# alt - return  : open -a /Applications/iTerm.app

# Reload khd config
cmd + alt + ctrl - r  : noti -m "khd reloaded!" khd -e "reload"

# Chunkwm
# Start / Stop chunkwm
# cmd + alt + ctrl - k  : noti -m "chunkwm stopped!" brew services stop chunkwm
# cmd + alt + ctrl - w  : noti -m "chunkwm started!" brew services start chunkwm

# Focus window
# alt - h   : chunkc tiling::window --focus west
# alt - j   : chunkc tiling::window --focus south
# alt - k   : chunkc tiling::window --focus north
# alt - l   : chunkc tiling::window --focus east

# cmd - j   : chunkc tiling::window --focus prev
# cmd - k   : chunkc tiling::window --focus next

# Change layout
# ctrl + alt - b  : chunkc tiling::desktop --layout bsp
# ctrl + alt - m  : chunkc tiling::desktop --layout monocle
# ctrl + alt - f  : chunkc tiling::desktop --layout float

# Swap window
# shift + alt - h   : chunkc tiling::window --swap west
# shift + alt - j   : chunkc tiling::window --swap south
# shift + alt - k   : chunkc tiling::window --swap north
# shift + alt - l   : chunkc tiling::window --swap east

# Move window
# shift + cmd - h   : chunkc tiling::window --warp west
# shift + cmd - j   : chunkc tiling::window --warp south
# shift + cmd - k   : chunkc tiling::window --warp north
# shift + cmd - l   : chunkc tiling::window --warp east
